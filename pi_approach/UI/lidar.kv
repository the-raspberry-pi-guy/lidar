#:kivy 1.9.2

#:set bar_height_width 100
#:set black [0,0,0,1]
#:set yheight 480
#:set xwidth 800

<Init_Screen>
	canvas.before:
		Rectangle:
			size:self.size
			source:"Background.png"
		Color:
			rgba:black
		Rectangle:
			pos:[bar_height_width,yheight]
			size:[5,-yheight]
		Rectangle:
			pos:[0,yheight-bar_height_width-10]
			size:[xwidth,5]
	cols: 2
	rows: 2
	Image:
		source:"logo.png"
		size_hint_x:None
		size_hint_y:None
		height:bar_height_width
		width:bar_height_width
	Label:
		text:"Initialising. Power on stepper motor and distance modules now!"
		color:black
		font_size:35
		text_size:self.size
		halign:"center"
		valign:"center"
		size_hint_y:None
		height:bar_height_width
	Switch:
		active:True
		size_hint_x:None
		width:bar_height_width
	BoxLayout:
		orientation:"horizontal"
		Label:
			markup:True
			text:"[size=40]Receiver:[/size]\n\n[size=60][color=28A100]OK[/color][/size]"
			halign:"center"
			valign:"top"
			color:black
		Label:
			markup:True
			text:"[size=40]Stepper:[/size]\n\n[size=60][color=28A100]OK[/color][/size]"
			halign:"center"
			valign:"top"
			color:black
		Label:
			markup:True
			text:"[size=40]Distance:[/size]\n\n[size=60][color=28A100]OK[/color][/size]"
			halign:"center"
			valign:"top"
			color:black

<Main_Screen>
	canvas.before:
		Rectangle:
			size:self.size
			source:"Background.png"
		Color:
			rgba:black
		Rectangle:
			pos:[bar_height_width,yheight]
			size:[5,-yheight]
		Rectangle:
			pos:[0,yheight-bar_height_width-10]
			size:[xwidth,5]
	cols: 2
	rows: 2	
	Image:
		source:"logo.png"
		size_hint_x:None
		size_hint_y:None
		height:bar_height_width
		width:bar_height_width
	GridLayout:
		cols: 3
		rows: 1
		size_hint_x:None
		size_hint_y:None
		height:bar_height_width
		width:xwidth-bar_height_width
		Slider:
			id: value_slider
			min:0
			max:361
			step:2
			on_value:root.change_value()
			size_hint_x:None
			width:4*bar_height_width
		Label:
			id: value_label
			size_hint_x:None
			width:20
			markup:True
		Button:
			size_hint_y:None
			height:(bar_height_width/100)*92
			text:"SCAN"
	GridLayout:
		cols:1
		rows:2
		size_hint_x:None
		size_hint_y:None
		height:yheight-bar_height_width-5
		width:bar_height_width
		Button:
			text:"test2"
	Scatter:
		size_hint_x:None
		size_hint_y:None
		height:yheight-bar_height_width
		width:xwidth-bar_height_width
		canvas.before:
			Rectangle:
				size:[100,100]
